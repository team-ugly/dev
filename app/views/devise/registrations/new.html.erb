          </div>
          <div class="wrap-input100 input100-select bg1">
            <span class="label-input100">エリア選択</span>
            <div>
              <%= form.collection_select :area_code, Area.all, "area_code", "area_name", {prompt: "エリアを選択してください"}, {class: "js-select2"} %>
