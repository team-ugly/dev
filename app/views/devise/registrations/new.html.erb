                <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= form.password_field :password,:class=>"input100",:placeholder=>"6文字以上"%>
          </div>

          <div class="wrap-input100 bg1 rs1-wrap-input100">
            <span class="label-input100">パスワード（もう一度入力してください）</span>
            <!input class="input100" type="text" name="phone" placeholder="Enter Number Phone">
            <%= form.password_field :password_confirmation, :class=>"input100"%>
          </div>

