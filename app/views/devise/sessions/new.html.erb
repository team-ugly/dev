<!body style="padding-top:95px">
<body>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="limiter">
      <div class="container-login100" style="background-image: url('/assets/loginv3/images/bg-01.jpg');">
        <div class="wrap-login100">
          <form class="login100-form validate-form">
					<span class="login100-form-logo">
						<i class="zmdi zmdi-landscape"></i>
					</span>

            <span class="login100-form-title p-b-34 p-t-27">
						ログイン
					</span>





            <div class="wrap-input100 validate-input" data-validate = "Enter username">

              <%= f.email_field :email, autofocus: true, class:'input100',:placeholder=>"Ｅメール" %>
              <span class="focus-input100" data-placeholder="&#xf207;"></span>
            </div>

            <div class="wrap-input100 validate-input" data-validate="Enter password">
              <!input class="input100" type="password" name="pass" placeholder="Password"><!--もともとあったボタン-->
              <%= f.password_field :password, autocomplete: "off", :class=>"input100",:placeholder=>"パスワード" %>
              <span class="focus-input100" data-placeholder="&#xf191;"></span>
            </div>

            <div class="contact100-form-checkbox">
              <!input class="input-checkbox100" id="ckb1" type="checkbox" name="remember-me">
              <%= f.check_box :remember_me,:class=>"input-checkbox100",:id=>"ckb1",:type=>"checkbox",:name=>"remember_me" %>
              <label class="label-checkbox100" for="ckb1">
                ログイン状態を保持する
              </label>
            </div>

            <div class="container-login100-form-btn">

              <%= f.submit 'ログイン', class:'login100-form-btn' %>





            </div>

            <div class="text-center p-t-30">
              <a class="txt1" href="/users/sign_up">
                新規登録
              </a>
            </div>
          </form>


        </div>
      </div>

<% end %>

