<p id="notice"><%= notice %></p>
<body>
<section class="wrapper2">
  <!-- Row title -->
  <main class="row title">
<h1>Places</h1>



<%= link_to 'New Place', new_place_path %>

<p id="notice"><%= notice %></p>


<div style='width: 100%;'>
  <div id="multi_markers" style='width: 100%; height: 400px;'></div>
</div>

<script>
    var handler = Gmaps.build('Google');
    handler.buildMap({ internal: {id: 'multi_markers'}}, function(){
        var markers = handler.addMarkers(<%=raw @hash.to_json %>);
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
    });
</script>

  </main></section></body>
<body>
<section class="wrapper">
  <!-- Row title -->
  <main class="row title">
    <ul>
      <li>名前</li>

      <li>住所</li>
      <li>緯度</li>>
      <li>経度</li>
      <li>説明</li>
    </ul>
  </main>

  <% @places.each do |place| %>
      <!-- Row 8 -->
      <article class="row pga">
        <ul>
          <li><%=place.name %></li>

          <li><%=place.address %></li>
          <li><%=place.latitude %></li>
          <li><%=place.longitude %></li>
          <li><%=place.description[0,3] %>...</li>
          <ul class="more-content">
            <li><%=place.description %></li>
          </ul>
          <td><%= link_to 'Show', place %></td>
          <td><%= link_to 'Destroy', place, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% if current_user.id == place.byid %>
              <td><%= link_to 'Edit', edit_place_path(place) %></td><% end %>
        </ul>

      </article>
  <% end %>
</section>
</body>
<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Address</th>
    <th>Latitude</th>
    <th>Longitude</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @places.each do |place| %>
      <tr>
        <td><%= place.name %></td>
        <td><%= place.description %></td>
        <td><%= place.address %></td>
        <td><%= place.latitude %></td>
        <td><%= place.longitude %></td>
        <td><%= link_to 'Show', place %></td>
        <td><%= link_to 'Destroy', place, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% if current_user.id == place.byid %>
            <td><%= link_to 'Edit', edit_place_path(place) %></td><% end %>

      </tr>
  <% end %>
  </tbody>
</table>
</html>
