<!DOCTYPE html>
<html lang="ja">
<head>
  <meta charaset=Shift-JIS>
  <title>
    <%= @place.name %>
  </title>
</head>

<body>
<div class="main">
  <div class="text">


<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @place.name %>
</p>

    <p>
      <strong>所在地:</strong>
      <%= @place.address %>
    </p>

<p>
  <strong>Description:</strong>
  <%= @place.description %>
</p>

<p>
  <strong>Latitude:</strong>
  <%= @place.latitude %>
</p>

<p>
  <strong>Longitude:</strong>
  <%= @place.longitude %>
</p>
  </div>

  <div class="img">
    <img src="farm.png" alt="写真" title="AAA農場1">
  </div>

  <%= @place.id %>


  <% if current_user.id == @place.byid %>
<%= link_to 'Edit', edit_place_path(@place) %>
  <% end %>
<%= link_to 'Back', places_path %>



<%=current_user.username %>
  <div class="comment-form">
    <%= form_for([@place , @message]) do |f| %>

      <div class="field">
        <%= f.text_area :body, placeholder: "Send message..." %>
      </div>



        <div class="wrap-input100 bg1 rs1-wrap-input100" style="display:none;">
          <span class="label-input100">ID</span>
          <!input class="input100" type="text" name="phone" placeholder="Enter Number Phone">
          <%= f.text_field :place_id, id: :place_id,:readonly => true, :class=>"input100",value:@place.id%>
        </div>

        <div class="wrap-input100 bg1 rs1-wrap-input100" style="display:none;">
          <span class="label-input100">ID</span>
          <!input class="input100" type="text" name="phone" placeholder="Enter Number Phone">
          <%= f.text_field :user_id, id: :user_id,:readonly => true, :class=>"input100",value:current_user.id%>
        </div>

        <div class="wrap-input100 bg1 rs1-wrap-input100" style="display:none;">
          <span class="label-input100">ID</span>
          <!input class="input100" type="text" name="phone" placeholder="Enter Number Phone">
          <%= f.text_field :user_name, id: :user_name,:readonly => true, :class=>"input100",value:current_user.username%>
        </div>


        <%= f.submit "Post", class: "btn btn-primary" %>
      <span class="picture">
      <%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png' %>
    </span>
    <% end %>


  </div>
  <table>
<tbody>
  <% @messages.each do |message| %>
      <tr>
        <td><%= message.body %></td>


      </tr>
  <% end %>
  </tbody></table>

</div>
</body>
</html>
